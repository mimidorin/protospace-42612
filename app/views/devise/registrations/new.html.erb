<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザー新規登録</h2>

      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード（6文字以上）" %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード再入力" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :name, "ユーザー名" %><br />
          <%= f.text_field :name %>
        </div>

        <div class="field">
          <%= f.label :profile, "プロフィール" %><br />
          <%= f.text_area :profile, class: :form__text %>
        </div>

        <div class="field">
          <%= f.label :occupation, "所属" %><br />
          <%= f.text_area :occupation, class: :form__text %>
        </div>

        <div class="field">
          <%= f.label :position, "役職" %><br />
          <%= f.text_area :position, class: :form__text %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div><main class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザー新規登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- メールアドレス -->
        <div class="field">
          <%= f.label :email, 'メールアドレス' %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <!-- パスワード -->
        <div class="field">
          <%= f.label :password, 'パスワード（6文字以上）' %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <!-- パスワード再入力 -->
        <div class="field">
          <%= f.label :password_confirmation, 'パスワード再入力' %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <!-- ユーザー名 -->
        <div class="field">
          <%= f.label :name, 'ユーザー名' %><br />
          <%= f.text_field :name, autocomplete: "name", placeholder: "例）みどり" %>
        </div>

        <!-- プロフィール -->
        <div class="field">
          <%= f.label :profile, 'プロフィール' %><br />
          <%= f.text_area :profile, rows: 3, placeholder: "自己紹介や一言" %>
        </div>

        <!-- 所属 -->
        <div class="field">
          <%= f.label :occupation, '所属' %><br />
          <%= f.text_area :occupation, rows: 2, placeholder: "会社・部署名" %>
        </div>

        <!-- 役職 -->
        <div class="field">
          <%= f.label :position, '役職' %><br />
          <%= f.text_area :position, rows: 2, placeholder: "例）支社長" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</main>
