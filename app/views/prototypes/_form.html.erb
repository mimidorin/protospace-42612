<%= form_with model: @prototype, local: true do |f| %>
  <% if @prototype.errors.any? %>
    <ul>
      <% @prototype.errors.full_messages.each do |m| %>
        <li><%= m %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="field">
    <%= f.label :title, "タイトル" %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :catch_copy, "キャッチコピー" %><br>
    <%= f.text_area :catch_copy, rows: 2 %>
  </div>

  <div class="field">
    <%= f.label :concept, "コンセプト" %><br>
    <%= f.text_area :concept, rows: 4 %>
  </div>

  <div class="field">
    <%= f.label :image, "画像" %><br>
    <%= f.file_field :image %>
  </div>

  <%= f.submit %>
<% end %>
